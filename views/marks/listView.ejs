<%- layout("layouts/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <h3 class="text-muted"><%= foundCourse.title %></h3>
</div>
<div class="row my-3">
  <% let count = 0; %> <% for(let score of currentScore.scoresMap){ %>
  <div class="card my-1">
    <div class="card-body">
      <div class="row">
        <h5 class="col card-title col-6">
          <a href="/students/<%=score.studentId%>"
            ><%= studentsNames[count] %>
          </a>
        </h5>
        <h7 class="text-muted col"> <%= score.studentId %> </h7>
        <h7 class="col"
          ><b><%= score.score %>/<%=currentScore.maxMarks%></b>
        </h7>
        <h7 class="col float-right">
          <a
            href="/scorecard/?subject=<%=foundSubject.title%>&description=<%=currentScore.description%>&studentId=<%=score.studentId%>"
            >View</a
          >
        </h7>
      </div>
    </div>
  </div>
  <% count++; %> <% } %>
</div>
