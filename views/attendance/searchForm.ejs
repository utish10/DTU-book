<%- layout("layouts/boilerplate.ejs") %>
<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row my-2">
    <h3 class="text-muted">Search Attendance</h3>
    <div class="col">
      <form action="/attendance/search" method="POST">
        <div class="form-group my-3">
          <label for="course" class="form-label" id="course">Course</label>
          <select name="course" id="course" class="form-select" required>
            <% for(let course of foundTeacher.courses){ %>
            <option value="<%=course.title%>"><%= course.title %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group my-3">
          <label for="subject" class="form-label" id="subject">Subject</label>
          <select name="subject" id="subject" class="form-select" required>
            <option value="<%=foundTeacher.subject.title%>">
              <%= foundTeacher.subject.title %>
            </option>
          </select>
        </div>
        <div class="form-group my-3">
          <label for="date" class="form-label" id="date">Date</label>
          <input
            type="date"
            class="form-control"
            name="date"
            id="date"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-primary w-100 mt-5">Search</button>
      </form>
    </div>
  </div>
</div>
