<% layout('layouts/boilerplate.ejs'); %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col">
      <div class="card shadow">
        <img
          src="https://media.istockphoto.com/photos/reading-room-or-library-interior-with-leather-armchair-bookshelf-and-picture-id1339845062?s=612x612"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <form
            action="/subjects"
            method="POST"
            novalidate
            class="validated-form"
          >
            <div class="mb-3">
              <label for="title">Title</label>
              <input
                type="text"
                id="title"
                name="title"
                class="form-control"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <button class="btn btn-success w-100" type="submit">
              Add Subject
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
