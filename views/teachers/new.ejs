<% layout("layouts/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <h3 class="text-muted">Add Teacher</h3>
    <div class="col mt-2">
      <form
        action="/teachers"
        method="POST"
        novalidate
        class="validated-form"
        enctype="multipart/form-data"
      >
        <div class="row">
          <div class="col mb-3 form-group">
            <label for="firstName" class="form-label">First Name</label>
            <input
              type="text"
              id="firstName"
              name="firstName"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="col mb-3 form-group">
            <label for="lastName" class="form-label">Last Name</label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
        <div class="mb-3 form-group">
          <label for="email" class="form-label">Email Address</label>
          <input
            type="text"
            id="email"
            name="emailAddress"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3 form-group">
          <label for="phoneNumber" class="form-label">Phone</label>
          <input
            type="number"
            id="phoneNumber"
            name="phoneNumber"
            class="form-control"
            required
            min="0"
            max="9999999999"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="row">
          <div class="col mb-3 form-group">
            <label for="gender" class="form-label">Gender</label>
            <select name="gender" id="gender" class="form-select">
              <option value="Female">Female</option>
              <option value="Male">Male</option>
              <option value="Others">Others</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="col mb-3 form-group">
            <label for="dateOfBirth" class="form-label">Date of Birth</label>
            <input
              type="date"
              id="dateOfBirth"
              name="dateOfBirth"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
        <div class="mb-3 form-group">
          <textarea
            name="residence"
            id="residence"
            cols="30"
            rows="5"
            class="form-control"
            required
            placeholder="Enter Residence"
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3 form-group">
          <label for="designation" class="form-label">Designation</label>
          <select
            name="designation"
            id="designation"
            required
            class="form-select"
          >
            <option value="Professor">Professor</option>
            <option value="Assistant Professor">Assistant Professor</option>
            <option value="Associate Professor">Associate Professor</option>
            <option value="Instructor">Instructor</option>
          </select>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3 form-group">
          <textarea
            name="pastExperience"
            id="pastExperience"
            cols="30"
            rows="5"
            class="form-control"
            required
            placeholder="Enter Past Experience"
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3 form-group">
          <label for="subject" class="form-label">Subject</label>
          <select name="subject" id="subject" required class="form-select">
            <% for(let title of subjectTitles){ %>
            <option value="<%=title%>"><%=title%></option>
            <% } %>
          </select>
        </div>
        <div class="mb-3 form-group">
          <label for="courses0" class="form-label"
            >Enter Courses (enter exact titles)</label
          >
          <input
            type="text"
            name="courses[]"
            id="courses0"
            required
            class="form-control my-2"
          />
          <input
            type="text"
            name="courses[]"
            id="courses1"
            required
            class="form-control my-2"
          />
          <input
            type="text"
            name="courses[]"
            id="courses2"
            class="form-control my-2"
          />
          <input
            type="text"
            name="courses[]"
            id="courses3"
            class="form-control my-2"
          />
          <input
            type="text"
            name="courses[]"
            id="courses4"
            class="form-control my-2"
          />
        </div>
        <div class="my-2 text-muted">
          <ul>
            <% for(let title of courseTitles){%>
            <li><%= title %></li>
            <% } %>
          </ul>
        </div>
        <div class="mb-3 form-group">
          <label for="formFileSingle" id="image" name="image" class="form-label"
            >Photograph</label
          >
          <input
            type="file"
            id="image"
            name="photograph"
            required
            class="form-control"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success w-100 my-2">Add Teacher</button>
      </form>
    </div>
  </div>
</div>
